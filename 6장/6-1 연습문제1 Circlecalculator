class Circlecalculator{
	//인자로 원의 반지름 정보를 전달하면 원의 넓이를 계산해서 반환하는 메소드와 원의 둘레를 계산해서 반환하는 메소드를 정의하고 이 
	//둘을 호출하는 main메소드 정의
	public static void main(String[] args) {
		System.out.println("원의 넓이: " + area_of_circle(3));
		System.out.println("원의 둘레: " + circumference(4));		
	}
	public static double 	area_of_circle(int r1){		//원의 넓이 3.14*r*r
		final double PI=3.14;
		return PI*r1*r1;
	}
	public static double circumference(int r2){	//원의 둘레 2*3.14*r
		final double PI=3.14;
		return 2*PI*r2;
	}
}
